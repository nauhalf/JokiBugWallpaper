<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vivindev.realfirewallpaper">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_path" />
        </provider>
        <activity
            android:name="com.vivindev.realfirewallpaper.WallpaperDetail"
            android:screenOrientation="portrait"
            android:theme="@style/WallPaperStuffTheme" />
        <activity
            android:name="com.vivindev.realfirewallpaper.DiscActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.vivindev.realfirewallpaper.WallpaperPreview"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_wall_preview"
            android:parentActivityName="com.vivindev.realfirewallpaper.WallpaperDetail"
            android:screenOrientation="portrait"
            android:theme="@style/WallPreviewTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vivindev.realfirewallpaper.WallpaperDetail" />
        </activity>
        <activity
            android:name="com.vivindev.realfirewallpaper.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.vivindev.realfirewallpaper.MainActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_main2"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <!-- TODO replace value with your app id -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-4475565160872077~5792755414"/>
    </application>

</manifest>